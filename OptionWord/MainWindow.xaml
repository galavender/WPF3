<Window x:Class="OptionWord.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OptionWord"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="700">
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
        <Button Content="Ok" HorizontalAlignment="Right" Width="100" Height="30" Style="{StaticResource StyleBouton}"/>

            <Button Name="bu" Content="Annuler"  HorizontalAlignment="Right" Width="100" Height="30" Style="{StaticResource StyleBouton}"/>
        </StackPanel>
        <TabControl TabStripPlacement="Left" >
            <TabItem Name="MenuGénéral" Header="Général">
                <local:UCGénéral/>
            </TabItem>
            <TabItem Header="Affichage"/>
            <TabItem Header="Vérification"/>
        </TabControl>
    </DockPanel>
</Window>

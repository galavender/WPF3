<UserControl x:Class="Trombinoscope.UCTrombi"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Trombinoscope"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <ListBox ScrollViewer.HorizontalScrollBarVisibility="Disabled" Name="LstPhoto" ItemsSource="{Binding LstEmp}">
        <ListBox.ItemsPanel>
            <ItemsPanelTemplate>
                <WrapPanel Orientation="Horizontal" />
            </ItemsPanelTemplate>
        </ListBox.ItemsPanel>
        <ListBox.ItemTemplate>
            <DataTemplate>
                <DockPanel>
                    <Image DockPanel.Dock="Top" Source="{Binding Image}" Width="200" Height="200"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Nom}" Margin="5"/>
                        <TextBlock Text="{Binding Prenom}" Margin="5"/>
                    </StackPanel>
                </DockPanel>
            </DataTemplate>
        </ListBox.ItemTemplate>


    </ListBox>
</UserControl>
